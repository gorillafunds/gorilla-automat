{
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "target": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "strict": true,
    "noImplicitAny": true
  },
  "ts-node": {
    "esm": true
  }
}
